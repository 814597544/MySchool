<?xml version="1.0" encoding="utf-8"?>
<com.deleteItem.ScrollLinerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/add_my_table"
        android:layout_height="46dp"
        android:layout_width="fill_parent"
        android:paddingLeft="6.0dip" >
        <TextView
            android:id="@+id/my_table_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:paddingLeft="15.0dip"
            android:text="大四课表"
            android:textColor="#51d5d5"
            android:textSize="15.0sp" />

        />
    </RelativeLayout>
    <TextView
        android:id="@+id/delete_item"
        android:layout_width="@dimen/delete_action_len"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ff0000"
        android:gravity="center"
        android:padding="7dip"
        android:textColor="#ffffff"
        android:text="删除"
        android:textSize="16dip" />
</com.deleteItem.ScrollLinerLayout>
