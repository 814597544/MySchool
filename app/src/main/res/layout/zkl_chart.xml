<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true"
    android:background="#383C45"

    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/settext_bag">

     <LinearLayout
         android:id="@+id/back"
         android:layout_width="56dp"
         android:layout_height="40dp"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="16dp"
             android:layout_gravity="center"
             android:src="@drawable/cart_return"/>

         </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="今日图表"
        android:textSize="24sp"
        android:textColor="#F0F1F2"/>

    <TextView
        android:id="@+id/today_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="2015-03-03"
        android:textSize="15sp"
        android:textColor="#29959A"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="70dp">
        <TextView
            android:id="@+id/mydream_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="6"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#C4E127"
                android:text="梦想"
                android:layout_marginRight="10dp"/>

<LinearLayout
    android:layout_width="280dp"
    android:layout_height="30dp"
    android:background="@drawable/setbar_bag2">
            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress_myDream"
                android:background="#383C45"
                android:layout_width="280dp"
                android:layout_height="28dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                app:rcMax="10"
                android:layout_weight="7"
                app:rcProgress="0"
                app:rcSecondaryProgress="0" />
        </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#F0F1F2"
            android:text="累计完成次梦想的52%，尔之所向，一往无前！"/>


        <TextView
            android:id="@+id/mynecessary_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="7"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#ED5186"
                android:text="必须"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:background="@drawable/setbar_bag2">
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progress_myNecessary"
                    android:background="#383C45"
                    android:layout_width="280dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    app:rcMax="10"
                    android:layout_weight="7"
                    app:rcProgress="0"
                    app:rcSecondaryProgress="0" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#F0F1F2"
            android:text="为梦想的实现又奠定了8小时的基础，身体是革命的本钱哦！"/>
        />
        <TextView
            android:id="@+id/mywast_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="45dp"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="8"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#FED337"
                android:text="浪费"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:background="@drawable/setbar_bag2">
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/progress_myWaste"
                    android:background="#383C45"
                    android:layout_width="280dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    app:rcMax="10"
                    android:layout_weight="7"
                    app:rcProgress="0"
                    app:rcSecondaryProgress="0" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#F0F1F2"
            android:text="时光又飞逝了8小时，一寸光阴一寸金哦！"/>



    </LinearLayout>
</RelativeLayout>
