<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/very_light_grey"
    android:orientation="vertical">

    <include layout="@layout/home_head"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:background="#ffffff">


        <RelativeLayout
            android:id="@+id/deram_name_view"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:background="@drawable/xj">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="梦想名称"
                android:textSize="13sp"
                android:textColor="#ABABAB"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/add_dream_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:textColor="@color/main_color"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/deram_name_view" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/need_time_view"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:background="@drawable/xj">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所需时间"
                android:textSize="13sp"

                android:textColor="#ABABAB"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/add_dream_alltime"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:numeric="integer"
            android:inputType="number"
            android:textColor="@color/main_color"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/need_time_view" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时"
            android:textSize="13sp"
            android:textColor="#ABABAB"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="#ffffff" >

            <RelativeLayout
                android:id="@+id/time_view"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:background="@drawable/xj">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实现时间"
                    android:textSize="13sp"
                    android:textColor="#ABABAB"
                    />
            </RelativeLayout>
           <RelativeLayout
                 android:id="@+id/dream_starttime"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_toRightOf="@+id/time_view"
                 android:layout_centerVertical="true"
                 android:gravity="center_vertical">
            <ImageView
                android:id="@+id/start_rili"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/rili"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/start_rili_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/main_color"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/start_rili"
                android:layout_marginLeft="5dp"
                />

       </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="2.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至"
                android:textSize="12sp"
                android:textColor="#ABABAB"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dream_endtime"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_weight="2">


            <ImageView
                android:id="@+id/end_rili"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/rili"
                />
            <TextView
                android:id="@+id/end_rili_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/main_color"
                android:layout_marginLeft="5dp"
                />



        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#ffffff">


        <RelativeLayout
            android:id="@+id/goal_view"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@drawable/xj">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每天完成目标"
                android:textSize="13sp"
                android:textColor="#ABABAB"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/add_dream_avgtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:textSize="13sp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时"
            android:textSize="13sp"
            android:textColor="#ABABAB"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#ffffff">


        <RelativeLayout
            android:id="@+id/rest_view"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@drawable/xj">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每天休息时间"
                android:textSize="13sp"
                android:textColor="#ABABAB"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/mest_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:background="@null"
            android:textSize="13sp"
            android:textColor="@color/main_color"
            android:text="11"
            android:numeric="integer"
            android:inputType="number"
            android:layout_toRightOf="@+id/rest_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时"
            android:textSize="13sp"
            android:textColor="#ABABAB"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <Button
                android:id="@+id/add_finish"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/settext_bag"
                android:text="确        定"
                android:textColor="@drawable/click_change_color"
                android:gravity="center"
               />

        </LinearLayout>
    </LinearLayout>








</LinearLayout>
